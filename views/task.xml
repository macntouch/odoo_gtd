<record id='task_tree_view' model='ir.ui.view'>
	<field name='name'>GTD Inbox Tree</field>
	<field name='model'>gtd.task</field>
	<field name='arch' type='xml'>
		<tree>
			<field name='sequence' invisible='1'/>
			<field name='name'/>
			<field name='assigned'/>
		</tree>
	</field>
</record>

<record id='task_form_view' model='ir.ui.view'>
	<field name='name'>GTD Inbox Form</field>
	<field name='model'>gtd.task</field>
	<field name='arch' type='xml'>
		<form string='Task'>
			<header>
				<field name='state' widget='statusbar' clickable='True'/>
			</header>
			<sheet string='Task'>
				<div class='oe_title'>
					<label for='name' class='oe_edit_only'/>
					<h1><field name='name'/></h1>
				</div>
				<div class='oe_button_box oe_right'>
					<button name='set_archive' string='Archive' type='object'/>
				</div>
				<group>
					<group string='Task info'>
						<field name='note'/>
					</group>
					<group string='Task settings'>
						<field name='assigned'/>
						<field name='project'/>
						<field name='area' widget='many2many_tags'/>
						<field name='context' widget='many2many_tags'/>
						<field name='tags' widget='many2many_tags'/>
						<field name='due'/>
					</group>
				</group>
			</sheet>
		</form>
	</field>
</record>

</data></openerp>