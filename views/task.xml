<openerp><data>

<menuitem id='task_menu' name='Tasks' parent='gtd_top_menu' sequence='10'/>

<record id='inbox_action' model='ir.actions.act_window'>
	<field name='name'>GTD Inbox Actions</field>
	<field name='res_model'>gtd.task</field>
	<field name='view_mode'>tree,form</field>
	<field name='context'>{'default_assigned': uid, 'default_state': 'inbox'}</field>
	<field name='domain'>[('state','=','inbox'), ('assigned','=',uid)]</field>
</record>

<menuitem id='inbox_menu' name='Inbox' parent='task_menu' sequence='10' action='inbox_action'/>

